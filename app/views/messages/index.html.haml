.chat.clearfix

  .chat-side
    .chat-user.clearfix
      %h5
      .chat-user__actions
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o
        = link_to edit_user_registration_path do
          %i.fa.fa-cog
  %ul.chat-groups
    %li.chat-group
      %p.chat-group__name
      %p.chat-group__message

  .chat-main
    .chat-header.clearfix
      .chat-header__left
        %h2
        %p.chat-header__users
      .chat-header__right

    .chat-body
      %ul.chat-messages
        %li.chat-message
          .chat-message__header.clearfix
          - @messages.each do |message|
            %p.chat-message__name
              = message.user.name
            %p.chat-message__time
              = message.created_at
            %p.chat-message__body
              = message.body

    .chat-footer
      .chat-footer__body
        = form_for [@group, @message] do |f|
          = f.text_field :body, placeholder: "type amessage", class: "text-field"
          = f.submit "SEND", class: "send-btn"
          = fa_icon 'file-image-o'
